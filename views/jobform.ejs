    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h2>Post a Job</h2>

                <div class="card">

                    <form class="form-card" onsubmit="event.preventDefault()">
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Employer's Name</label> <input type="text"
                                    id="fname" name="fname" placeholder=""> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Website Link</label> <input type="link" id="fname"
                                    name="fname" placeholder=""> </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Business email</label> <input type="text" id="email"
                                    name="email" placeholder="Enter your official email"> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Phone number</label> <input type="text" id="mob"
                                    name="mob" placeholder=""> </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Job title</label> <input type="text" id="job"
                                    name="job" placeholder=""> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Location</label> <input type="text" id="desc"
                                    name="desc" placeholder=""> </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Last Date to Apply</label> <input type="date"
                                    id="desc" name="date" placeholder=""> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Duration</label> <input type="text" id="desc"
                                    name="desc" placeholder=""> </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Start Date</label> <input type="number" id="desc"
                                    name="satrtdate" placeholder=""> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Stipend(INR)</label> <input type="number" id="desc"
                                    name="stipend" placeholder=""> </div>

                        </div>
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-lg-12  flex-column d-flex"> <label
                                    class="form-control-label px-3">About Employer</label> <input type="text" id="desc"
                                    name="aboutcompany" placeholder=""> </div>

                        </div>
                        <div class="form-group flex-column d-flex text-left"><label
                                class="form-control-label px-3">Enter daily tasks</label>
                            <label for="formGroupExampleInput"></label>
                            <input type="text" class="form-control  col-sm-6 flex-column d-flex"
                                id="formGroupExampleInput" placeholder="Add Task">


                            <label for="formGroupExampleInput2"></label>
                            <input type="text" class="form-control  col-sm-6 flex-column d-flex"
                                id="formGroupExampleInput2" placeholder="Add Task">


                            <label for="formGroupExampleInput2"></label>
                            <input type="text" class="form-control  col-sm-6 flex-column d-flex"
                                id="formGroupExampleInput2" placeholder="Add Task">


                            <label for="formGroupExampleInput2"></label>
                            <input type="text" class="form-control  col-sm-6 flex-column d-flex"
                                id="formGroupExampleInput2" placeholder="Add Task">
                        </div>

                        <div class="form-group flex-column d-flex text-left"><label class="form-control-label px-3">Add
                                Perks</label>
                            <label for="formGroupExampleInput"></label>
                            <input type="text" class="form-control  col-sm-6 flex-column d-flex"
                                id="formGroupExampleInput" placeholder="Add Perk">


                            <label for="formGroupExampleInput2"></label>
