<% layout('layouts/boilerplate') %>

    <script src="/js/jobedit.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/jobform.css">

    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h2>Edit Job Details</h2>
                <div class="card">

                    <form class="form-card" id='formID' action="/jobs/<%=job._id%>?_method=PUT" method='Post'>

                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Business Email</label> <input type="text" id="email"
                                    name="email" placeholder="" value="<%=currentUser.email%> "> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Phone Number</label> <input type="text" id="mob"
                                    name="mob" placeholder=""> </div>
                        </div>


                        <div class="row justify-content">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Job Title</label> <input type="text" id="job"
                                    name="Name" placeholder="" value="<%=job.Name%> "> </div>
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Last Date to Apply</label> <input type="date"
                                    id="desc" name="Lastdate" placeholder="Select a date" value="<%=job.Lastdate%>">
                            </div>
                        </div>


                        <div class="row justify-content">
                            <div>Location</div>

                            <input hidden type='text' id="statehidden" name="statehidden"
                                value="<%= job.State %>"></input>
                            <input hidden type='text' id="cityhidden" name="cityhidden"
                                value="<%= job.Location %>"></input>

                            <div class="form-group col-sm-6 flex-column d-flex">

                                <select onclick="print_city('state', this.selectedIndex);" id="sts" name="State"
                                    class="form-control" required>
                                </select>
                            </div>
                            <div class=" form-group col-sm-6 flex-column d-flex">

                                <select name="Location" id="state" class="form-control" value="<%=job.Location%> "
                                    required></select>
                                <script language="javascript">print_state("sts");</script>
                            </div>

                        </div>

                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label class="form-control-label px-3">Start Date</label>
                                <input type="date" id="desc" name="Startdate" placeholder="Select a date"
                                    value="<%=job.Startdate%>">
                            </div>


                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">CTC (INR)</label> <input type="number" id="desc"
                                    name="CTC" placeholder="" value="<%=job.CTC%>"> </div>

                        </div>


                        <div class="form-group flex-column d-flex text-center skillcss">
                            <label class="form-control-label px-3">Enter Skills required</label>


                            <div class="container form-group col-sm-6 flex-column d-flex">


                                <div class="tag-container">
                                    <input value="<%=job.skills%> ">
                                </div>

                            </div>

                            <button type="button" id="tagbutton" class="btn btn-primary mb-3">Add</button>

                        </div>

                        <p>
                            <label for="descriptions">Description</label>
                            <br>
                            <textarea id="descriptions" cols="40" rows="6" placeholder="Add Job Description (if any)"
                                name="Descriptions"><%=job.Descriptions%> </textarea>
                        </p>
                </div>

                <input hidden name="skills" id="skills" />
                <div class="row justify-content-lg-center">
                    <div class="form-group col-lg-3">
                        <button type="button" class="btn-block btn-primary" id="submit1">Post</button>
                    </div>

                </div>
                </form>
            </div>
        </div>
    </div>
    </div>



    <script src="/js/forms.js"></script>