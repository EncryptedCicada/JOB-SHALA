<% layout('layouts/boilerplate') %>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="css/jobs.css">
    <h2 class="mt-5 mb-4" id="job">Job Opportunities </h2>
    <div class="row">
        <div class="col-2 hide"></div>
        <div class="col-3 hide">
            <div class="card stick">
                <div class="card-body">
                    <h5 class="card-title mb-3 text-center">Filter</h5>
                    <form action="/jobs" method="get" id = 'myForm'>

                        <div class="mb-3">
                            <label for="City" class="form-label">Location</label>
                            <input type="text" class="form-control" id="City"
                                placeholder="e.g. Delhi" >
                        </div>
                       
                        <div class="mb-3">
                            <label for="Company" class="form-label">Company Name</label>
                            <input type="text" name = "title" class="form-control" id="Company"
                                value = "<%= query.title %>" placeholder="e.g. Amazon">
                        </div>
                      

                        <label for="customRange2" class="form-label">Desired minimum monthly stipend (â‚¹)</label>
                        <input name = 'mi' type="range" id="myRange" class="form-range" min="0" max="100000" id="customRange2"  step = 1000 value = '<%= query.mi %>'> 
                        <div id = "demo" >  
                        </div> 
                
                        <button type="submit" class="btn btn-outline-info">Info</button>
                    </form>
                    
                </div>
            </div>
        </div>

        <div class="col-5" id="show">
            <% for (var i = (page-1)*4;i< Math.min(page*4,jobs.length);i++) {%>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="button_container">
                            <h5 class="card-title mb-3 d-inline"><%=jobs[i].Name%></h5>
                            <div class="logo-image2 d-inline">
                                
                            </div>
                        </div>
                        <h6 class="card-subtitle mb-4 text-muted"><%=jobs[i].Company%> </h6>
                        <div class="card-text mb-3">
                            <div class="location"><i class="material-icons text-muted icon">&#xe55f;</i> <%=jobs[i].Location%></div>
                        </div>
                        <div class="mb-4">
                            <div class="location text-muted mb-1">
                                <span class="me-5"><i class="material-icons text-muted icon">&#xe039;</i> Start Date</span>
                                <span class="me-5"><i class="material-icons text-muted icon">&#xe88f;</i> CTC</span>
                                <span class="me-5"><i class="material-icons text-muted icon">&#xe88b;</i> Apply By</span>
                            </div>
                            <div class="text-dark">
                                <span class="ms-1 me-5"><%=jobs[i].Startdate%></span>
                                <span class="ms-2 me-5"><%=jobs[i].CTC%></span>
                                <span class="ms-3 me-5"><%=jobs[i].Lastdate%></span>
                            </div>
                        </div>  
                        <div class="button_container">
                            <button class="pill text-muted">Freshers Job</button>
                            <a href="">
                                <div class="color">View details<i class = "material-icons icon">&#xe5cc;</i></div>
                            </a>
                        </div>
                    </div>
                </div>


                <% } %>

        </div>

        <div class="col-7 hide">
            <div class="pagination">
                <form action="/jobs" method="get" class="form-products">
                <% if(page > 1) { %>
                
                <label class="b btn mx - 2" for = "prev">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="btn--icon"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15 19l-7-7 7-7"
                    />
                  </svg>
                </label>
                <input id="prev" hidden type="submit" name="page" value="<%= page-1 %>" />
                <input hidden name="mi" value="<%= query.mi%>" />" 
                <input hidden name="title" value="<%= query.title%>" />
                <input hidden name="CompanyName" value="<%= query.CompanyName %>"/>
                <% } %>
            </form>

                <div class="pages">
                  <a class="page active"><%= page %></a
                </div>
                <form action="/jobs" method="get" class="form-products"> 
                <% if(page < mxLength/4) { %>
             
                 <label  class="b-btn mx - 2" for="next">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="btn--icon"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M9 5l7 7-7 7"
                    />  
                  </svg>
                </label>

                <input hidden type="submit" name="page" value="<%= page+1 %>" />             
                <input id="next" hidden type="submit" name="page" value="<%= page+1 %>" />
                <input hidden name="mi" value="<%= query.mi%>" />" 
                <input hidden name="title" value="<%= query.title%>" />
                <input hidden name="CompanyName" value="<%= query.CompanyName %>"/>
                <% } %>
            </form> 
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/js/jobs.js"></script>
    <script src="/js/Slider.js"></script> 
