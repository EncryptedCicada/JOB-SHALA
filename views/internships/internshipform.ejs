<% layout('layouts/boilerplate') %>

    <script src="/js/city.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/jobform.css">


    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h2>Post an Internship</h2>
                <div class="card">

                    <!-- <form class="form-card" onsubmit="event.preventDefault()"> -->
                    <form class="form-card" id='formID' action="/internships" method='Post'>

                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Business Email</label> <input type="text" id="email"
                                    name="email" placeholder=""> </div>
                                    <div class="form-group col-sm-6 flex-column d-flex"> <label
                                        class="form-control-label px-3">Internship Title</label> <input type="text" id="job"
                                        name="Name" placeholder=""> </div>
                            
                        </div>


                        <div class="row justify-content">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                <label class="form-control-label px-3">Start Date</label>
                                <input type="date" id="desc" name="Startdate" placeholder="Select a date">
                            </div>
                           
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Last Date to Apply</label> <input type="date"
                                    id="desc" name="Lastdate" placeholder="Select a date"> </div>
                        </div>


                        <div class="row justify-content">
                            <div>Location</div>
                            <div class="form-group col-sm-6 flex-column d-flex">

                                <select onchange="print_city('state', this.selectedIndex);" id="sts" name="State"
                                    class="form-control" required></select>
                            </div>
                            <div class="form-group col-sm-6 flex-column d-flex">

                                <select id="state" class="form-control" required name="Location"></select>
                                <script language="javascript">print_state("sts");</script>
                            </div>
                        </div>

                        <div class="row justify-content-between text-left">
                           
                            <div class="form-group col-sm-6 flex-column d-flex"> <label
                                    class="form-control-label px-3">Duration (in weeks)</label> <input type="number"
                                    id="desc" name="Duration" placeholder=""> </div>
                                    <div class="form-group col-sm-6 flex-column d-flex"> <label
                                        class="form-control-label px-3">Stipend(INR)</label> <input type="number" id="desc"
                                        name="Stipend" placeholder=""> </div>

                        </div>

                        <div class="row justify-content-between text-left">

                           




                        </div>
                        <div class="form-group flex-column d-flex text-center skillcss">
                            <label class="form-control-label px-3">Enter Skills required</label>


                            <div class="container form-group col-sm-6 flex-column d-flex">


                                <div class="tag-container">
                                    <input />
                                </div>

                            </div>

                            <button type="button" id="tagbutton" class="btn btn-primary mb-3">Add</button>

                        </div>

                        <p>
                            <label for="descriptions">Description</label>
                            <br>
                            <textarea id="descriptions" cols="60" rows="2" placeholder="Add Job Description (if any)"
                                name="Descriptions"></textarea>
                        </p>


                        <input type="hidden" name="skills" id="skills" value="" />
                        <div class="row justify-content-lg-center">
                            <div class="form-group col-lg-3">
                                <button type="button" class="btn-block btn-primary" id="submit1">Post</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <script src="/js/forms.js"></script>